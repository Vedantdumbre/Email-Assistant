{
  "manifest_version": 3,
  "name": "MailNova",
  "version": "1.0.0",
  "description": "AI-powered email reply generator",
  "permissions":["activeTab", "storage"],
  "host_permissions":[
    "http://localhost:8080/*",
    "http://localhost:5173/*"
  ],
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://mail.google.com/*"],
      "css":["content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "icons/*" ],
      "matches": ["*://mail.google.com/*"]
    }
  ],
  "action":{
    "default_title": "MailNova"
  }
}