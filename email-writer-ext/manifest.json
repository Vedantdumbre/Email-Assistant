{
  "manifest_version": 3,
  "name": "MailNova",
  "version": "1.0.0",
  "description": "AI-powered email reply generator",
  "permissions":["activeTab", "storage"],
  "host_permissions":[
    "http://localhost:8080/*",
    "http://localhost:5173/*"
  ],
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://mail.google.com/*"],
      "css":["content.css"],
      "run_at": "document_end"
    }
  ],
   "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "MailNova",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [ "icons/*" ],
      "matches": ["*://mail.google.com/*"]
    }
  ]
}